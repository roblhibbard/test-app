<%= render "shared/errors", obj: @user %>
				
<div class='row'>
	<div class='col-xs-10'>
		 <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |r| %>
		 	<div class="form-group">
		 		<div class="control-label col-sm-2">
					<%= r.label :username %>
			</div>
			<div class="col-sm-10">
		 			<%= r.text_field :username, class: "form-control", placeholder: "Enter username", autofucus: true %>
		 	</div>
	</div>
	<div class="form-group">
		 <div class="control-label col-sm-2">
		 	<%= r.label :email %>
		 	</div>
		 <div class="col-sm-10">
		 	<%= r.email_field :email, class: "form-control", placeholder: "Enter email" %>
		 </div>
		 </div>
	<div class="form-group">
		 <div class="control-label col-sm-2">
		 	<%= r.label :password %>
		 	</div>
		 <div class="col-sm-10">
		 	<%= r.password_field :password, class: "form-control", placeholder: "Enter password" %>
		</div>
	</div>
		 
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
		 	<%= r.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
		 	</div>
		</div>
	<% end %> 
		<div class="col-xs-4 col-xs-offset-4">		
			[ <%= link_to "Cancel request and return to Articles listing", articles_path %>]
		</div>
	</div>